{% extends 'base.html.twig' %}
{% block title %}Gérer les biens{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les biens</h1>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for property in properties %}
            <tr>
                <td>{{ property.title|capitalize }}</td>
                <td>
                    <a href="{{ path('admin.property.edit', {id: property.id}) }}" class="btn bt-secondary">Éditer</a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}