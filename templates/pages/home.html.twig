{% extends 'base.html.twig' %}
{% block title %}Ma super agence !{% endblock %}

{% block body %}

    <div class="jumbotron text-center">
        <h1>Ma Super Agence</h1>
        <h3>Une agence qu'elle est vachement mieux pour acheter des maisons !</h3>
    </div>
    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-lg-3 col-md-10">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                               <a href="{{ path('property.show', {id: property.id, slug:property.slug}) }}">{{ property.title|capitalize }}</a>
                            </h5>
                            <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
                            <div class="text-primary" style="font-weight: bold;font-size: 1.5rem">{{ property.formattedPrice }} â‚¬</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}